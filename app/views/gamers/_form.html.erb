<div class="new-gamer--form">
	<%= simple_form_for gamer do |f| %>
	  <% if gamer.errors.any? %>
		<div id="error_explanation">
		  <h2><%= pluralize(gamer.errors.count, "error") %> prohibited this gamer from being saved:</h2>

		  <ul>
			<% gamer.errors.each do |error| %>
			  <li><%= error.full_message %></li>
			<% end %>
		  </ul>
		</div>
	  <% end %>

		<%= f.input :name, label: 'Никнейм' %>
		<%= f.input :guildname, label: 'Гильдия' %>
